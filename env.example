# 資料庫配置
# 使用MySQL
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=visitor_db
DB_USER=visitor_user
DB_PASSWORD=your_secure_password_here

# 加密金鑰（32字元）
# 請使用 openssl rand -base64 32 生成
ENCRYPTION_KEY=your-32-character-secret-key-here!

# 伺服器端口
PORT=3000

# 訪客證有效期（小時）
VISITOR_PASS_EXPIRY_HOURS=1

# JWT簽名密鑰（用於管理員認證）
JWT_SECRET=your-jwt-secret-key

# 設備識別碼
DEVICE_LDID=TEST-DEVICE-001

